//
// Title

{
    "class": "title_bar",
    "fg": ["background", 40,40,40, 1.0],
    "bg": ["background", 200, 200, 200, 1.0]
},

//
// EMPTY WINDOW BACKGROUND
//

{
    "class": "sheet_container_control",
    "layer0.tint": [200,200,200]
},

//
// GRID LAYOUT
//

{
    "class": "grid_layout_control",
    "border_size": 1,
    "border_color": [200,200,200]
},

//
// MINI MAP
//

{
    "class": "minimap_control",
    "viewport_color": [0,0,0,30]
},

//
// TEXT INPUT FIELD
//

// Text input field item
{
    "class": "text_line_control",
    "layer0.opacity": 1.0,
    "layer0.inner_margin": [4, 5, 4, 3],
    "layer0.tint": [180,180,180],
    "font.face": "{{fontface}}",
    "content_margin": 8
},

//
// PANEL BACKGROUNDS
//

// Bottom panel background
{
    "class": "panel_control",
    "layer0.inner_margin": [0,0],
    "layer0.texture": "",
    "layer0.opacity": 1,
    "layer0.tint": [200,200,200],
    "content_margin": 0
},

//
// LABELS
//

// General labels
{
    "class": "label_control",
    "color": [40,40,40]
},

// Text field labels
{
    "class": "label_control",
    "parents": [{"class": "panel_control"}]
},

// Button labels
{
    "class": "label_control",
    "parents": [{"class": "button_control"}]
},

//
// TOOLTIP
//

// Tooltip container
{
    "class": "tool_tip_control",
    "layer0.texture": "",
    "layer0.tint": [140,140,140],
    "layer0.inner_margin": [1,1],
    "layer0.opacity": 1,
    "content_margin": [4,4]
},
// Tooltip content
{
    "class": "tool_tip_label_control",
    "color": [40,40,40]
}
