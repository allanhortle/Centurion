//
// TABS (REGULAR)
//

// Tab set
{
    "class": "tabset_control",
    "layer0.tint": ["background", 0, 0, 0, 0.6],
    "layer0.inner_margin": [10, 0],
    "layer0.opacity": 1,
    "content_margin": [0, 8, 0, 0],
    "tab_overlap":0,
    "tab_width": 180,
    "tab_min_width": 45,
    "tab_height": 32,
    "mouse_wheel_switch": false
},
{
    "class": "tabset_control",
    "parents": [{"class": "window", "attributes": ["file_light"]}],
    "layer0.tint": ["background", 0.8],
},
{
    "class": "tabset_control",
    "settings": ["mouse_wheel_switches_tabs", "enable_tab_scrolling"],
    "mouse_wheel_switch": true
},
// Tab element
{
    "class": "tab_control",
    "content_margin": [12,0],
    "max_margin_trim": 0,
    "hit_test_level": 0,
    "layer0.tint": ["background", 0],
    "layer0.inner_margin": [5,5],
    "layer0.opacity": 1
},
{
    "class": "tab_control",
    "parents": [{"class": "window", "attributes": ["file_light"]}],
},
// Tab close state
{
    "class": "tab_control",
    "settings": ["show_tab_close_buttons"],
    "content_margin": [12,0]
},
// Tab hover state
{
    "class": "tab_control",
    "attributes": ["hover"],
    "layer0.texture": ""
},
// Tab active state
{
    "class": "tab_control",
    "attributes": ["selected"],
    "layer0.texture": "",
    "layer0.tint": ["background", 0, 0, 0, 1],
},

{
    "class": "tab_label",
    "font.face": "{{fontface}}",
    "font.size": 12,
    "fg": ["foreground", 0.6]
},

{
    "class": "tab_label",
    "parents": [{"class": "tab_control", "attributes": ["selected"]}],
    "fg": ["foreground", 1]
},
{
    "class": "tab_label",
    "parents": [
      {"class": "window", "attributes": ["file_light"]},
      {"class": "tab_control", "attributes": ["selected"]}
    ],
    "fg": ["foreground", 0.8]
},



// tab set scroll left scroll right
{
    "class": "scroll_tabs_left_button",
    "content_margin": 0
},
{
    "class": "scroll_tabs_left_button",
    "settings": ["centurion_tab_scrolling"],
    "content_margin": [9, 7, 8, 6],
    "layer0.opacity": 1
},
{
    "class": "scroll_tabs_right_button",
    "content_margin": 0
},
{
    "class": "scroll_tabs_right_button",
    "settings": ["centurion_tab_scrolling"],
    "content_margin": [9, 7, 8, 6],
    "layer0.opacity": 1
},

{
    "class": "show_tabs_dropdown_button",
    "content_margin": 0
},
{
    "class": "show_tabs_dropdown_button",
    "settings": ["centurion_tab_scrolling"],
    "content_margin": [9, 7, 8, 6],
    "layer0.opacity": 1
}
