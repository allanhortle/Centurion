

//
// SIDEBAR
//

// Sidebar container
{
    "class": "sidebar_container",
    "layer0.opacity": 1,
    "layer0.tint": ["background", 0, 0, 0, 0.6],
    "content_margin": [0, 8, 0, 0],
},
{
    "class": "sidebar_container",
    "parents": [{"class": "window", "attributes": ["file_light"]}],
    "layer0.tint": ["background", 0.8],
    "layer0.opacity": 1.0,
},
// Sidebar tree
{
    "class": "sidebar_tree",
    "row_padding": [16,3],
    "indent": 10,
    "indent_offset": -2,
    "indent_top_level": true,
    "dark_content": true
},

// Sidebar rows
{
    "class": "tree_row",
    "layer0.texture": "",
    "layer0.tint": ["background", 0.4],
    "layer0.opacity": 0,
    "layer0.inner_margin": [1,1]
},
// Sidebar row selected
{
    "class": "tree_row",
    "attributes": ["selected"],
    "layer0.opacity": 1
},
// Sidebar heading
{
    "class": "sidebar_heading",
    "color": ["foreground", 0.35],
    "font.bold": false,
    "font.size": 12,
    "font.face": "{{fontface}}"
},
// Sidebar entry
{
    "class": "sidebar_label",
    "font.face": "{{fontface}}",
    "font.size": 12,
    "color": ["foreground", 0.8]
},







// Sidebar folder entry
{
    "class": "sidebar_label",
    "parents": [{"class": "tree_row","attributes": ["expandable","hover"]}],
    "color": ["foreground", 1]
},
{
    "class": "sidebar_label",
    "parents": [{"class": "tree_row","attributes": ["expandable"]}],
    "settings": ["bold_folder_labels"],
    "font.bold": true
},
// Sidebar entry selected
{
    "class": "sidebar_label",
    "parents": [{"class": "tree_row","attributes": ["selected"]}],
    "color": ["foreground", 1]
},




//
// SIDEBAR - OPEN FILE ICONS
//

// Sidebar file close
{
    "class": "close_button",
    "layer0.texture": "",
    "layer0.opacity": 0,
    "layer0.inner_margin": 0,
    "layer0.tint": {{red}},
    "content_margin": 0
},
{
    "class": "close_button",
    "parents": [{"class": "tree_row","attributes": ["hover"]}],
    "layer0.opacity": 1,
    "layer0.texture": "{{folderName}}/Centurion/cross.png"
},
// Sidebar file dirty
{
    "class": "close_button",
    "attributes": ["dirty"],
    "layer0.texture": "{{folderName}}/Centurion/circle.png",
    "layer0.opacity": 1,
    "layer0.tint": {{blue}}
},
{
    "class": "close_button",
    "attributes": ["dirty"],
    "parents": [{"class": "tree_row","attributes": ["selected"]}],
    "layer0.texture": "{{folderName}}/Centurion/cross.png"
},
{
    "class": "close_button",
    "attributes": ["dirty"],
    "parents": [{"class": "tree_row","attributes": ["hover"]}],
    "layer0.texture": "{{folderName}}/Centurion/cross.png",
    "layer0.opacity": 1
},
// Sidebar file close hover
{
    "class": "close_button",
    "attributes": ["hover"],
    "layer0.texture": "{{folderName}}/Centurion/cross.png"
},
{
    "class": "close_button",
    "parents": [{"class": "tree_row","attributes": ["hover","selected"]}],
    "layer0.texture": "{{folderName}}/Centurion/cross.png",
    "layer0.opacity": 1
},

