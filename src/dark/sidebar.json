},
{
    "class": "icon_folder",
    "parents": [{ "class": "tree_row", "attributes": ["expanded"] }],
    "layer0.texture": "{{folderName}}/Centurion/folder-open.png"
},
{
    "class": "icon_folder",
    "settings": ["centurion_color_red"],
    "layer0.tint": {{red}}
},
{
    "class": "icon_folder",
    "settings": ["centurion_color_blue"],
    "layer0.tint": {{blue}}
},
{
    "class": "icon_folder",
    "settings": ["centurion_color_yellow"],
    "layer0.tint": {{yellow}}
},
{
    "class": "icon_folder",
    "settings": ["centurion_color_orange"],
    "layer0.tint": {{orange}}
},
{
    "class": "icon_folder",
    "settings": ["centurion_color_grey"],
    "layer0.tint": {{grey}}
},

{
    "class": "icon_file_type",
    // "layer0.texture": "{{folderName}}/Centurion/file.png",
    "layer0.opacity": 1.0,
    "layer0.tint": [125,125,125],
    "content_margin": [8,8]
},

// DISCOSURES

{
    "class": "disclosure_button_control",
    "layer0.texture": "Theme - Default/arrow_right.png",
    "layer0.opacity": 0.8,
    "content_margin": [9, 7, 8, 6],
    "content_margin": 0,
    "layer0.tint": {{green}},
    "layer0.inner_margin": 0
},
{
    "class": "disclosure_button_control",
    "settings": ["centurion_color_red"],
    "layer0.tint": {{red}}
},
{
    "class": "disclosure_button_control",
    "settings": ["centurion_color_blue"],
    "layer0.tint": {{blue}}
},
