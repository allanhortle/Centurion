
// Quick panel background
{
    "class": "overlay_control",
    "layer0.opacity": 1,
    "layer0.tint": ["background", 0, 0, 0, 0.6],
    "content_margin": 0
},
{
    "class": "overlay_control",
    "parents": [{"class": "window", "attributes": ["file_light"]}],
    "layer0.tint": ["background", 0, 0, 0, 0.1]
},



//
// QUICK PANEL
//

{
    "class": "quick_panel",
    "row_padding": [16, 12]
},
{
    "class": "quick_panel_row",
    "layer0.opacity": 0
},
{
    "class": "quick_panel_row",
    "attributes": ["selected"],
    "layer0.texture": "",
    "layer0.tint": {{green}}
},
{
    "class": "quick_panel_row",
    "attributes": ["selected"],
    "settings": ["centurion_color_red"],
    "layer0.tint": {{red}}
},
{
    "class": "quick_panel_row",
    "attributes": ["selected"],
    "settings": ["centurion_color_blue"],
    "layer0.tint": {{blue}}
},
{
    "class": "quick_panel_row",
    "attributes": ["selected"],
    "settings": ["centurion_color_yellow"],
    "layer0.tint": {{yellow}}
},
{
    "class": "quick_panel_row",
    "attributes": ["selected"],
    "settings": ["centurion_color_orange"],
    "layer0.tint": {{orange}}
},
{
    "class": "quick_panel_row",
    "attributes": ["selected"],
    "settings": ["centurion_color_grey"],
    "layer0.tint": {{grey}}
},

{
    "class": "quick_panel_label",
    "font.face": "{{fontface}}",
    "fg": ["foreground", 1],
    "match_fg": [255,255,255],
    "selected_fg": [255,255,255],
    "selected_match_fg": ["background", 255, 255, 255, 0.1]
},

{
    "class": "quick_panel_path_label",
    "font.face": "{{fontface}}",
    "fg": ["foreground", 0,0,0, 0.3],
    "match_fg": [220,220,220],
    "selected_fg": [255,255,255],
    "selected_match_fg": ["background", 255, 255, 255, 0.1]
},
{
    "class": "quick_panel_score_label",
    "font.face": "{{fontface}}",
    "fg": ["foreground", 0.9],
    "selected_fg": [255,255,255]
},

