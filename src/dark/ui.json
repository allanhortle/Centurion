

//
// Title

{
    "class": "title_bar",
    "fg": ["background", 255, 255, 255, 0.7],
    "bg": ["background", 0, 0, 0, 0.6]
},
{
    "class": "title_bar",
    "attributes": ["file_light"],
    "fg": ["foreground", 1],
    "bg": ["background", 0.8]
},


//
// EMPTY WINDOW BACKGROUND
//

// {
//     "class": "window"
// },
{
    "class": "sheet_container_control",
    "layer0.tint": [0,0,0],
    "layer0.opacity": 1
},

//
// GRID LAYOUT
//

{
    "class": "grid_layout_control",
    "border_size": 1,
    "border_color": ["background", 0, 0, 0, 0.25]
},

//
// MINI MAP
//
{
    "class": "minimap_control",
    "settings": ["always_show_minimap_viewport"],
    "viewport_color": [255,255,255, 30],
    "viewport_opacity": 0.4,
},
{
    "class": "minimap_control",
    "settings": ["!always_show_minimap_viewport"],
    "viewport_color": [128, 128, 128, 0.25],
    "viewport_opacity": { "target": 0.0, "speed": 20, "interpolation": "smoothstep" },
},
{
    "class": "minimap_control",
    "attributes": ["hover"],
    "settings": ["!always_show_minimap_viewport"],
    "viewport_color": [128, 128, 128, 0.25],
    "viewport_opacity": { "target": 0.4, "speed": 20, "interpolation": "smoothstep" },
},

//
// TEXT INPUT FIELD
//

// Text input field item
{
    "class": "text_line_control",
    "layer0.opacity": 1,
    "layer0.tint": ["background", 0,0,0, 0.4],
    "color_scheme_tint": ["background", 0,0,0, 0.4],
    "content_margin": 8
},
{
    "class": "text_line_control",
    "parents": [{"class": "window", "attributes": ["file_light"]}],
    "layer0.tint": ["background", 0,0,0, 0.3],
    "color_scheme_tint": ["background", 0,0,0, 0.3]
},


//
// PANEL BACKGROUNDS
//

// Bottom panel background
{
    "class": "panel_control",
    "layer0.opacity": 1,
    "layer0.tint": ["background", 0.6],
},
{
    "class": "panel_control",
    "parents": [{"class": "window", "attributes": ["file_light"]}],
    "layer0.tint": ["background", 0.7],
},
{
    "class": "panel_grid_control",
    "inside_spacing": 0,
    "outside_hspacing": 0,
    "outside_vspacing": 0
},


//
// LABELS
//

// General labels
{
    "class": "label_control",
    "font.face": "{{fontface}}",
    "color": ["foreground", 0,0,0, 1],
},
{
    "class": "title_label_control",
    "font.face": "{{fontface}}",
    "color": [220,220,220]
},

//
// TOOLTIP
//

// Tooltip container
{
    "class": "tool_tip_control",
    "layer0.texture": "",
    "layer0.tint": [60,60,60],
    "layer0.inner_margin": [1,1],
    "layer0.opacity": 1,
    "content_margin": [4,4]
},
// Tooltip content
{
    "class": "tool_tip_label_control",
    "font.face": "{{fontface}}",
    "color": [230,230,230]
}
