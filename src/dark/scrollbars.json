
//
// STANDARD SCROLLBARS
//

// Bar
{
    "class": "scroll_bar_control",
    "layer0.tint":["background", 1],
    "layer0.opacity": 1
},
// Standard horizontal scroll bar
{
    "class": "scroll_bar_control",
    "attributes": ["horizontal"]
},


// panel scrollbars
{
    "class": "scroll_bar_control",
    "parents": [{"class": "overlay_control"}],
    "layer0.tint":["background", 0.4],
    "layer0.opacity": 1
},

// Corner
{
    "class": "scroll_corner_control",
    "layer0.tint":["background", 1],
    "layer0.opacity": 1
},

// Puck
{
    "class": "puck_control",
    "layer0.tint":["foreground", 0.2],
    "layer0.opacity": 1,
    "content_margin": [6,0]
},
{
    "class": "puck_control",
    "parents": [{"class": "window", "attributes": ["file_light"]}],
    "layer0.tint":["background", 0,0,0, 0.1],
    "layer0.opacity": 1,
    "content_margin": [6,0]
},
{
    "class": "puck_control",
    "attributes": ["horizontal"],
    "content_margin": [0,6]
},

//
// OVERLAY SCROLLBARS
//
{
    "class": "scroll_area_control",
    "settings": ["overlay_scroll_bars"],
    "overlay": true
}

